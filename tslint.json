{
  "extends": "tslint:recommended",
  "rules": {
    "max-line-length": {
      "options": [
        120
      ]
    },
    "indent": [
      true,
      "spaces",
      2
    ],
    "new-parens": true,
    "no-consecutive-blank-lines": true,
    "no-debugger": {
      "severity": "warning"
    },
    "no-console": {
      "severity": "warning"
    },
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ],
    "interface-name": false,
    "object-literal-sort-keys": false,
    "no-trailing-whitespace": true,
    "no-empty": true,
    "typedef": [
      true,
      "call-signature",
      "parameter",
      "property-declaration",
      "member-variable-declaration"
    ]
  },
  "jsRules": {
    "max-line-length": {
      "options": [
        120
      ]
    }
  }
}
