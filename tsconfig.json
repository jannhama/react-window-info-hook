{
  "compilerOptions": {
    "target": "es5",
    "outDir": "./dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "sourceMap": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "rootDir": "src",
    "jsx": "react",
    "pretty": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}
